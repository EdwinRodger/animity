<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Animity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_theme</item>
        <item name="colorSecondaryVariant">@color/green_theme</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/animity</item>
        <item name="android:textColorHint">@color/grayTextColor</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="Theme.Animity.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>


    <style name="Outlined" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColorHint">@color/background_color</item>
        <item name="startIconTint">@color/background_color</item>
        <item name="boxStrokeColor">@color/background_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="endIconTint">@color/background_color</item>
    </style>

    <style name="BottomSheet_Button" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/background_color</item>
        <item name="boxStrokeColor">@color/background_color</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Theme.Animity" parent="Base.Theme.Animity" />

    <style name="Theme.MySplash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/primaryBlackBackground</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.Animity</item>
    </style>

    <style name="Suffix">
        <item name="android:height">54dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ThemeOverlay.SearchView" parent="">
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/grayTextColor</item>
        <item name="closeIconTint">@color/white</item>
    </style>

    <style name="ShapeAppearanceOverlay.Animity.FeedItem" parent="">
        <item name="cornerSize">12dp</item>
    </style>


    <style name="VideoPlayer" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="MyCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.Cut
        </item>
    </style>

    <style name="MaterialThemeDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorProgress</item>
        <item name="android:windowBackground">@drawable/dialog_rounded_corner</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="TitleText">
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TitleText.Large">
        <item name="android:textSize">@dimen/text_14</item>
    </style>

    <style name="EpisodeNumber">
        <item name="android:textSize">@dimen/text_12</item>
    </style>


    <style name="Theme.CastVideosTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- ... -->
        <item name="mediaRouteTheme">@style/CustomMediaRouterTheme</item>
    </style>

    <style name="CustomMediaRouterTheme" parent="Theme.MediaRouter">
        <item name="mediaRouteButtonStyle">@style/CustomMediaRouteButtonStyle</item>
    </style>

    <style name="CustomMediaRouteButtonStyle" parent="Widget.MediaRouter.Light.MediaRouteButton">
        <item name="mediaRouteButtonTint">#EEFF41</item>
    </style>

    <style name="PostTitleDetailText">
        <item name="drawableLeftCompat">@drawable/ic_person</item>
        <item name="android:drawablePadding">@dimen/dimen_4</item>
        <item name="drawableTint">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">19sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="PostAuthorDetailText">
        <item name="drawableLeftCompat">@drawable/ic_person</item>
        <item name="android:drawablePadding">@dimen/dimen_4</item>
        <item name="drawableTint">@color/grayTextColor</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">@dimen/dimen_8</item>
    </style>

    <style name="PostBodyText">
        <!--        <item name="android:layout_marginTop">@dimen/dimen_16</item>-->
        <!--        <item name="android:textColor">@color/textColor</item>-->
        <!--        <item name="android:textSize">14sp</item>-->
        <!--        <item name="android:lineSpacingExtra">@dimen/dimen_4</item>-->
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <!--        <item name="android:textColor">@android:color/transparent</item>-->
    </style>

    <style name="NiceButton">
        <item name="android:padding">5dp</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="iconGravity">textStart</item>
        <item name="iconSize">20dp</item>
        <item name="cornerRadius">4dp</item>
        <item name="android:textSize">15sp</item>
        <item name="backgroundTint">@color/colorPrimaryLight</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:foreground">@drawable/outline_drawable</item>
    </style>


    <style name="WhiteButton" parent="NiceButton">
        <item name="strokeColor">@color/iconGrayBackground</item>
        <item name="backgroundTint">@color/textColor</item>
        <item name="iconTint">@color/iconGrayBackground</item>
        <item name="android:textColor">@color/iconGrayBackground</item>
        <item name="rippleColor">@color/primaryBlackBackground</item>
    </style>

    <style name="GreenButton" parent="NiceButton">
        <item name="strokeColor">@color/textColor</item>
        <item name="backgroundTint">@color/green_theme</item>
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="rippleColor">@color/primaryBlackBackground</item>
    </style>


    <style name="ShapeAppearanceOverlay.MaterialCardView.Cut" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">8dp</item>
        <item name="cornerSizeTopLeft">8dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>


    <style name="PreferenceScreen" parent="Theme.Animity">
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="Headline5">
        <item name="android:textSize">@dimen/text_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Caption">
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="Headline6">
        <item name="android:textSize">@dimen/text_20</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body2">
        <item name="android:textSize">@dimen/text_14</item>
        <item name="maxLines">2</item>
    </style>

</resources>